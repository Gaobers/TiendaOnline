@model IEnumerable<TiendaOnline.AppMVC.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid py-4 px-lg-5">
    <div class="card border-0 shadow-sm mb-4 bg-primary text-white">
        <div class="card-body d-flex justify-content-between align-items-center p-4">
            <div>
                <h2 class="fw-bold mb-0"><i class="bi bi-people-fill me-2"></i>Usuarios</h2>
            </div>
            <a asp-action="Create" class="btn btn-light btn-lg shadow-sm fw-bold">
                <i class="bi bi-plus-lg me-1"></i> Nuevo Registro
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Correo)</th>
                            <th><i class="bi bi-key-fill me-1"></i>Hash</th>
                            <th>@Html.DisplayNameFor(model => model.Rol)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Estatus)</th>
                            <th>Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person-circle fs-5"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Nombre)</span>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@item.Correo" class="text-decoration-none text-muted">
                                        <i class="bi bi-envelope me-1 small"></i>@Html.DisplayFor(modelItem => item.Correo)
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark font-monospace fw-normal border text-truncate" style="max-width: 100px; display: inline-block;">
                                        @Html.DisplayFor(modelItem => item.PasswordHash)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle px-2">
                                        @Html.DisplayFor(modelItem => item.Rol)
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Estatus.ToString().ToLower() == "true" || item.Estatus.ToString() == "1") {
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success px-3">Activo</span>
                                    } else {
                                        <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger px-3">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="small text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>@item.FechaRegistro.ToString("dd MMM yyyy")
                                    </div>
                                </td>
                                <td class="text-center px-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-white btn-sm border" title="Editar">
                                            <i class="bi bi-pencil-square text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-white btn-sm border" title="Ver detalles">
                                            <i class="bi bi-info-circle text-info"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-white btn-sm border" title="Eliminar">
                                            <i class="bi bi-trash3 text-danger"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light border-0 py-3 text-center">
            <span class="text-muted small">Total: <strong>@Model.Count()</strong> usuarios registrados</span>
        </div>
    </div>
</div>

<style>
    .btn-white:hover { background-color: #f8f9fa; }
    .table thead th { font-size: 0.75rem; font-weight: 700; color: #495057; }
    .card { border-radius: 1rem; overflow: hidden; }
</style>