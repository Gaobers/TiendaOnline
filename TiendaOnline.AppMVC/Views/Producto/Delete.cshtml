@model TiendaOnline.AppMVC.Models.Producto

@{
    ViewData["Title"] = "Eliminar producto";

    var activo = Model.Estatus == 1;
}


<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-0">Eliminar producto</h3>
        <div class="text-muted">Esta acción no se puede deshacer</div>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        ← Volver
    </a>
</div>

<div class="row">
    <div class="col-lg-8 col-xl-7">
        <div class="card shadow-sm delete-card">
            <div class="card-body p-4">

                <div class="warning-box mb-4">
                    ⚠ ¿Estás seguro que deseas eliminar este producto?
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="label">Nombre</div>
                        <div class="value">@Model.Nombre</div>
                    </div>

                    <div class="col-md-6">
                        <div class="label">Precio</div>
                        <div class="value">$@Model.Precio.ToString("0.00") USD</div>
                    </div>

                    <div class="col-md-6">
                        <div class="label">Estado</div>
                        <div class="value">
                            @if (activo)
                            {
                                <span class="badge-soft badge-soft-success">ACTIVO</span>
                            }
                            else
                            {
                                <span class="badge-soft badge-soft-danger">INACTIVO</span>
                            }
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="label">Descripción</div>
                        <div class="value">
                            @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "—" : Model.Descripcion)
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="label">Fecha registro</div>
                        <div class="value">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    <div class="col-md-6">
                        <div class="label">Fecha actualización</div>
                        <div class="value">
                            @(Model.FechaActualizacion.HasValue
                                ? Model.FechaActualizacion.Value.ToString("dd/MM/yyyy HH:mm")
                                : "—")
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProductoId" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            🗑 Confirmar eliminación
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>