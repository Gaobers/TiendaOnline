@model TiendaOnline.AppMVC.Models.Producto

@{
    ViewData["Title"] = "Editar producto";

}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-0">Editar producto</h3>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">← Volver</a>
        <a asp-action="Details" asp-route-id="@Model.ProductoId" class="btn btn-outline-primary">Ver detalles</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 col-xl-7">
        <div class="card shadow-sm" style="border-radius:16px;">
            <div class="card-body p-4">
                <form asp-action="Edit" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

                    <input type="hidden" asp-for="ProductoId" />

                    <div class="row g-3">
                        <!-- Nombre -->
                        <div class="col-12">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <!-- Precio -->
                        <div class="col-md-6">
                            <label asp-for="Precio" class="form-label fw-semibold">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Precio" class="form-control" placeholder="0.00" inputmode="decimal" />
                            </div>
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <!-- Estatus (switch) -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold d-block">Estado</label>

                            <!-- Switch: convierte Estatus 0/1 -->
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="estatusSwitch"
                                @(Model.Estatus == 1 ? "checked" : "") />

                                <label class="form-check-label" for="estatusSwitch">
                                    <span id="estatusText">@((Model.Estatus == 1) ? "Activo" : "Inactivo")</span>
                                </label>
                            </div>

                            <!-- Hidden - controlador -->
                            <input type="hidden" asp-for="Estatus" id="Estatus" />
                            <span asp-validation-for="Estatus" class="text-danger small"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="col-12">
                            <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4"
                                      placeholder="Describe el producto"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <!-- Fecha registro (solo lectura) -->
                        <div class="col-md-6">
                            <label asp-for="FechaRegistro" class="form-label fw-semibold">Fecha registro</label>
                            <input asp-for="FechaRegistro" class="form-control" readonly />
                            <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                            <div class="form-text">No se recomienda modificar esta fecha.</div>
                        </div>

                        <!-- Fecha actualización -->
                        <div class="col-md-6">
                            <label asp-for="FechaActualizacion" class="form-label fw-semibold">Fecha actualización</label>
                            <input asp-for="FechaActualizacion" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaActualizacion" class="text-danger small"></span>
                        </div>

                        <!-- Botones -->
                        <div class="col-12 d-flex gap-2 pt-2">
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

