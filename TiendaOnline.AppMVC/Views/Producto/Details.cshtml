@model TiendaOnline.AppMVC.Models.Producto

@{
    ViewData["Title"] = "Detalle del producto";

    var activo = Model.Estatus == 1;

    string estadoTexto = activo ? "ACTIVO" : "INACTIVO";
    string estadoClass = activo ? "badge-soft badge-soft-success" : "badge-soft badge-soft-danger";
}


<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-0">Detalle del producto</h3>
        <div class="text-muted">Información general del registro</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">← Volver</a>
        <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-primary">Editar</a>
    </div>
</div>

<div class="card shadow-sm products-card">
    <div class="card-body p-4">
        <!-- Encabezado con nombre + estado -->
        <div class="d-flex align-items-start justify-content-between gap-3 mb-4">
            <div class="d-flex align-items-center gap-3">
                <div class="thumb">IMG</div>
                <div>
                    <div class="h5 mb-1">@Model.Nombre</div>
                </div>
            </div>

            <span class="@estadoClass">@estadoTexto</span>
        </div>

        <!-- Datos -->
        <div class="row g-3">
            <div class="col-md-4">
                <div class="label">Precio</div>
                <div class="value">$@Model.Precio.ToString("0.00") USD</div>
            </div>

            <div class="col-md-4">
                <div class="label">Fecha registro</div>
                <div class="value">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</div>
            </div>

            <div class="col-md-4">
                <div class="label">Fecha actualización</div>
                <div class="value">
                    @(Model.FechaActualizacion.HasValue
                        ? Model.FechaActualizacion.Value.ToString("dd/MM/yyyy HH:mm")
                        : "—")
                </div>
            </div>

            <div class="col-12">
                <div class="label">Descripción</div>
                <div class="value" style="font-weight:600;">
                    @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "—" : Model.Descripcion)
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
        <small class="text-muted">ID: @Model.ProductoId</small>

        <div class="d-flex gap-2">
            <a asp-action="Delete" asp-route-id="@Model.ProductoId" class="btn btn-outline-danger">
                Eliminar
            </a>
        </div>
    </div>
</div>