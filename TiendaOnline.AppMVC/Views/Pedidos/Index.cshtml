@using System.Linq
@using TiendaOnline
@using TiendaOnline.AppMVC.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<TiendaOnline.AppMVC.Models.Pedido>

@{
    ViewData["Title"] = "Panel de Control - Pedidos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid py-4" style="background-color: #f8f9fa;">

    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="fw-bold text-dark">
                <i class="bi bi-cart-check-fill text-primary me-2"></i>
                Gestión de Pedidos
            </h2>
            <p class="text-muted">
                Monitorea y gestiona las ventas de tu tienda en tiempo real.
            </p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm border-0">
                <i class="bi bi-plus-lg me-1"></i> Nuevo Pedido
            </a>
        </div>
    </div>

    <div class="row g-3 mb-4">

        <!-- Total Órdenes -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-bag-fill text-primary fs-3"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Total Órdenes</h6>
                            <h4 class="mb-0 fw-bold">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Venta Total -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash-stack text-success fs-3"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 text-muted">Venta Total</h6>
                            <h4 class="mb-0 fw-bold">
                                @Model.Sum(x => x.Total).ToString("C")
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Tabla -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-0">
            <h5 class="mb-0 fw-bold text-secondary">Listado Reciente</h5>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-muted text-uppercase small">
                        <th class="ps-4 py-3">ID</th>
                        <th>Orden</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Total</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="text-muted fw-medium">
                                    #@item.PedidoId
                                </span>
                            </td>
                            <td>
                                <span class="fw-bold text-dark">
                                    @item.NumeroOrden
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary bg-opacity-10 rounded-circle p-2 me-2">
                                        <i class="bi bi-person text-secondary"></i>
                                    </div>
                                    <span class="fw-medium">
                                        @item.NombreCliente
                                    </span>
                                </div>
                            </td>
                            <td>
                                <span class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @item.FechaRegistro.ToShortDateString()
                                </span>
                            </td>
                            <td>
                                @if (item.Estado == "Completado")
                                {
                                    <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill border border-success border-opacity-25">
                                        Completado
                                    </span>
                                }
                                else if (item.Estado == "Pendiente")
                                {
                                    <span class="badge bg-warning-subtle text-warning-emphasis px-3 py-2 rounded-pill border border-warning border-opacity-25">
                                        Pendiente
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary px-3 py-2 rounded-pill">
                                        @item.Estado
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="fw-bold text-dark">
                                    @item.Total.ToString("C")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm rounded-circle"
                                            type="button"
                                            data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu shadow border-0">
                                        <li>
                                            <a class="dropdown-item"
                                                   asp-action="Edit"
                                                   asp-route-id="@item.PedidoId">
                                                <i class="bi bi-pencil me-2 text-primary"></i>
                                                Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item"
                                                   asp-action="Details"
                                                   asp-route-id="@item.PedidoId">
                                                <i class="bi bi-eye me-2 text-info"></i>
                                                Detalles
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item text-danger"
                                                   asp-action="Delete"
                                                   asp-route-id="@item.PedidoId">
                                                <i class="bi bi-trash me-2"></i>
                                                Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>      